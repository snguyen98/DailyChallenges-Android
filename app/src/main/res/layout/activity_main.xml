<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackground"
    android:gravity="center"
    android:padding="30dp"
    tools:context=".activities.SplashActivity">

    <fragment
        android:id="@+id/info_bar"
        android:name="com.firstventuresgroup.dailychallenges.fragments.InfoBarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp" />

    <fragment
        android:id="@+id/challenge_card"
        android:name="com.firstventuresgroup.dailychallenges.fragments.ChallengeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_bar"
        android:layout_below="@+id/info_bar"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

    <fragment
        android:id="@+id/button_bar"
        android:name="com.firstventuresgroup.dailychallenges.fragments.ButtonBarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp" />
</RelativeLayout>