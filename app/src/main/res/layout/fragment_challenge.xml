<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <include
        android:id="@+id/challenge_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/challenge_card_height"
        android:layout_marginStart="@dimen/challenge_margin"
        android:layout_marginEnd="@dimen/challenge_margin"
        layout="@layout/challenge_card" />

    <Button
        android:id="@+id/skip_button"
        android:layout_below="@id/challenge_card"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/challenge_margin"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/asap"
        android:text="@string/skip_label"
        style="@style/ChallengeButton" />

    <Button
        android:id="@+id/complete_button"
        android:layout_below="@id/challenge_card"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/skip_button"
        android:layout_marginStart="@dimen/challenge_button_dist"
        android:layout_marginEnd="@dimen/challenge_margin"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/asap"
        android:text="@string/complete_label"
        style="@style/ChallengeButton" />

</RelativeLayout>
