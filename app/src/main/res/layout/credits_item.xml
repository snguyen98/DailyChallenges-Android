<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/credits_item"
    android:background="@drawable/selectable_list_item"
    tools:ignore="RtlSymmetry"
    style="@style/InfoListItemLayout">

    <View
        android:id="@+id/top_divider"
        android:visibility="gone"
        style="@style/Divider" />

    <TextView
        android:id="@+id/credits_name"
        android:layout_below="@id/top_divider"
        android:layout_marginStart="20dp"
        style="@style/InfoListItemName" />

    <TextView
        android:id="@+id/credits_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/credits_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/timeless"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/credits_link_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/credited_link_desc" />

    <View
        android:layout_below="@id/credits_role"
        style="@style/Divider" />

</RelativeLayout>