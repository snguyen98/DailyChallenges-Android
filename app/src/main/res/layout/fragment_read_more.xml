<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionName="card_element"
    style="@style/MatchHeight">

    <ScrollView
        style="@style/VerticalLayout">
      
        <LinearLayout
            style="@style/VerticalLayout">

            <include layout="@layout/read_more_summary" />

            <include
                android:id="@+id/read_more_pointer"
                layout="@layout/read_more_pointer" />

            <include
                android:id="@+id/read_more_detail"
                layout="@layout/read_more_detail" />

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>
