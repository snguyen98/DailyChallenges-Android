<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/rm_layout_padding_below"
    android:orientation="vertical"
    style="@style/ReadMorePadding">

    <TextView
        android:id="@+id/info_label"
        android:text="@string/info_label"
        android:textColor="@color/info_label_colour"
        android:textSize="@dimen/rm_info_label_size"
        style="@style/DetailHeading" />

    <View style="@style/Divider" />

    <TextView
        android:id="@+id/challenge_desc"
        android:layout_marginTop="@dimen/rm_desc_margin_above"
        style="@style/BodyText" />

    <TextView
        android:id="@+id/links_label"
        android:layout_marginTop="@dimen/rm_link_label_margin_above"
        android:text="@string/links_label"
        android:textColor="@color/link_label_colour"
        android:textSize="@dimen/rm_links_label_size"
        style="@style/DetailHeading" />

</LinearLayout>
