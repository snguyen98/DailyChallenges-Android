<resources>
    <!--  Base application theme  -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/actionBarPrimary</item>
        <item name="colorPrimaryDark">@color/actionBarSecondary</item>
        <item name="android:windowBackground">@color/screenBackground</item>
    </style>

    <!--  Splash screen theme  -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!--  Style for navigation drawer  -->
    <style name="DrawerTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!--  Style for challenge card  -->
    <style name="ChallengeCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">220dp</item>

        <item name="cardBackgroundColor">@color/lightGray</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">15dp</item>
    </style>

    <!--  Style for bold text views  -->
    <style name="BoldHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:color">@android:color/black</item>
        <item name="android:fontFamily">@font/asap_bold</item>
    </style>

    <!--  Style for text views in the detail section of read more page  -->
    <style name="DetailHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginBottom">10dp</item>

        <item name="android:color">@android:color/black</item>
        <item name="android:fontFamily">@font/asap_bold</item>
    </style>

    <!--  Style for Sub Heading text  -->
    <style name="SubText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingBottom">2dp</item>
        <item name="android:fontFamily">@font/timeless</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--  Style for descriptions  -->
    <style name="BodyText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">2dp</item>
      
        <item name="android:fontFamily">@font/timeless</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="PagerDot">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>

        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
    </style>

    <!--  Layout style for vertical linear layouts  -->
    <style name="VerticalLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--  Layout style for read more page  -->
    <style name="ReadMorePadding">
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
    </style>

    <!--  Style for views to fill the whole screen  -->
    <style name="MatchHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--  Style for views to be contained within itself  -->
    <style name="WrapAll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:fontFamily">@font/asap_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AsapTextAppearance">
        <item name="android:fontFamily">@font/asap</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textAppearance">@font/asap</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="first_launch_message_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">25dp</item>

        <item name="android:alpha">0</item>
        <item name="background">@color/lightGray</item>
        <item name="contentPadding">20dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">3dp</item>
    </style>


    <style name="first_launch_button">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginStart">45dp</item>
        <item name="android:layout_marginEnd">45dp</item>

        <item name="android:alpha">0</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/asap</item>
    </style>

</resources>
