<resources>
    <!--  Base application theme  -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/actionBarPrimary</item>
        <item name="colorPrimaryDark">@color/actionBarSecondary</item>
        <item name="android:windowBackground">@color/screenBackground</item>
    </style>

    <!--  Unused Theme for Read More page  -->
    <style name="ReadMoreTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/actionBarSecondary</item>
        <item name="titleTextColor">@android:color/black</item>
    </style>

    <!--  Splash screen theme  -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!--  Style for navigation drawer  -->
    <style name="DrawerTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!--  Style for challenge card  -->
    <style name="ChallengeCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">220dp</item>

        <item name="cardBackgroundColor">@color/lightGray</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">15dp</item>
    </style>

    <!--  Style for bold text views  -->
    <style name="BoldHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:color">@android:color/black</item>
        <item name="android:fontFamily">@font/asap_bold</item>
    </style>

    <!--  Style for text views in the detail section of read more page  -->
    <style name="DetailHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>

        <item name="android:color">@android:color/black</item>
        <item name="android:fontFamily">@font/asap_bold</item>
    </style>

    <!--  Style for any smaller text  -->
    <style name="SubText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingBottom">2dp</item>
        <item name="android:fontFamily">@font/timeless</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--  Style for streak icon on challenge card  -->
    <style name="StreakIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <!--  Style for streak number on challenge card  -->
    <style name="StreakVal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingStart">3dp</item>

        <item name="android:fontFamily">@font/asap_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--  Style for freeze icon on challenge card  -->
    <style name="FreezeIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <!--  Style for category icon on read more page  -->
    <style name="CategoryIcon">
        <item name="android:layout_width">113dp</item>
        <item name="android:layout_height">113dp</item>

        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>

        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--  Style for arrow icon on read more page  -->
    <style name="ArrowIcon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>

        <item name="contentDescription">@string/arrow_icon_desc</item>
    </style>

    <style name="PagerDot">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>

        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
    </style>

    <!--  Layout style for vertical linear layouts  -->
    <style name="VerticalLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--  Layout style for read more page  -->
    <style name="ReadMoreLayout" parent="VerticalLayout">
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <!--  Style for views to fill the whole screen  -->
    <style name="MatchHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--  Style for views to be contained within itself  -->
    <style name="WrapAll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:fontFamily">@font/asap_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AsapTextAppearance">
        <item name="android:fontFamily">@font/asap</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textAppearance">@font/asap</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
