<resources>
    <!--                                                                                         -->
    <!--                                     Main App Themes                                     -->
    <!--                                                                                         -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/action_bar_primary</item>
        <item name="colorPrimaryDark">@color/action_bar_secondary</item>
        <item name="android:windowBackground">@color/primary_colour</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>


    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/action_bar_primary</item>
        <item name="android:fontFamily">@font/asap_bold</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>


    <style name="DrawerTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/secondary_colour</item>
    </style>


    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textAppearance">@font/asap</item>
    </style>


    <!--                                                                                         -->
    <!--                                       Page Padding                                      -->
    <!--                                                                                         -->

    <style name="ReadMorePadding">
        <item name="android:paddingStart">@dimen/rm_layout_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/rm_layout_padding_horizontal</item>
    </style>


    <!--                                                                                         -->
    <!--                                About and Credits Styling                                -->
    <!--                                                                                         -->

    <style name="InfoListLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/secondary_colour</item>
    </style>


    <style name="InfoListItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="InfoListItemName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/divided_list_item_margin_vertical</item>

        <item name="android:fontFamily">@font/asap</item>
        <item name="android:textSize">@dimen/divided_list_name_size</item>
    </style>


    <!--                                                                                         -->
    <!--                                 Challenge List Styling                                  -->
    <!--                                                                                         -->

    <style name="ChallengeListSmallLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:fontFamily">@font/timeless</item>
        <item name="android:textSize">@dimen/challenge_list_item_subtext_size</item>
    </style>


    <style name="ChallengeListSmallValue" parent="ChallengeListSmallLabel">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginStart">@dimen/challenge_list_item_value_margin</item>
    </style>


    <!--                                                                                         -->
    <!--                                     Text Styling                                        -->
    <!--                                                                                         -->

    <style name="BoldHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/main_text_colour</item>
        <item name="android:fontFamily">@font/asap_bold</item>
    </style>


    <style name="DetailHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginBottom">@dimen/detail_heading_margin_below</item>
        <item name="android:fontFamily">@font/asap_bold</item>
    </style>


    <style name="SubText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingBottom">@dimen/sub_text_padding_below</item>
        <item name="android:fontFamily">@font/timeless</item>
        <item name="android:textSize">@dimen/sub_text_size</item>
    </style>


    <style name="BodyText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/body_text_padding_below</item>
      
        <item name="android:fontFamily">@font/timeless</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">@dimen/wider_line_spacing</item>
    </style>


    <style name="CenteredMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">@dimen/centered_text_margin</item>

        <item name="android:fontFamily">@font/asap</item>
        <item name="android:textColor">@color/secondary_colour</item>
        <item name="android:textAlignment">center</item>

        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">@dimen/wider_line_spacing</item>
    </style>


    <!--                                                                                         -->
    <!--                                     Button Styling                                      -->
    <!--                                                                                         -->

    <style name="ChallengeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_below">@id/challenge_card</item>
        <item name="android:layout_marginTop">@dimen/challenge_button_margin_above</item>
        <item name="android:fontFamily">@font/asap</item>
    </style>


    <style name="FirstLaunchButton">
        <item name="android:layout_width">@dimen/first_launch_button_width</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginStart">@dimen/first_launch_button_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/first_launch_button_margin_horizontal</item>

        <item name="android:alpha">0</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/asap</item>
    </style>


    <!--                                                                                         -->
    <!--                                     Other View Styling                                  -->
    <!--                                                                                         -->

    <style name="FirstLaunchMessageBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginStart">@dimen/first_launch_box_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/first_launch_box_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/first_launch_box_margin_bottom</item>

        <item name="android:alpha">0</item>
        <item name="background">@color/light_gray</item>
        <item name="contentPadding">@dimen/first_launch_box_content_padding</item>
        <item name="cardCornerRadius">@dimen/first_launch_box_corner</item>
        <item name="cardElevation">@dimen/first_launch_box_elevation</item>
    </style>


    <style name="PagerDot">
        <item name="android:layout_width">@dimen/help_dots_size</item>
        <item name="android:layout_height">@dimen/help_dots_size</item>

        <item name="android:layout_marginStart">@dimen/help_dots_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/help_dots_margin_horizontal</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <style name="AsapTextAppearance">
        <item name="android:fontFamily">@font/asap</item>
    </style>

</resources>
