<resources>
    <!--                                                                                         -->
    <!--                                     Main App Themes                                     -->
    <!--                                                                                         -->


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/action_bar_primary</item>
        <item name="colorPrimaryDark">@color/action_bar_secondary</item>
        <item name="android:windowBackground">@color/screenBackground</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>


    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/action_bar_primary</item>
        <item name="android:fontFamily">@font/asap_bold</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="DrawerTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@android:color/white</item>
    </style>


    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textAppearance">@font/asap</item>
    </style>


    <!--                                                                                         -->
    <!--                                     Page Padding                                        -->
    <!--                                                                                         -->

    <style name="ReadMorePadding">
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
    </style>


    <!--                                                                                         -->
    <!--                                     Text Styling                                        -->
    <!--                                                                                         -->

    <style name="BoldHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:color">@android:color/black</item>
        <item name="android:fontFamily">@font/asap_bold</item>
    </style>


    <style name="DetailHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginBottom">10dp</item>

        <item name="android:color">@android:color/black</item>
        <item name="android:fontFamily">@font/asap_bold</item>
    </style>


    <style name="SubText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingBottom">2dp</item>
        <item name="android:fontFamily">@font/timeless</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="BodyText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">2dp</item>
      
        <item name="android:fontFamily">@font/timeless</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>


    <!--                                                                                         -->
    <!--                                     Button Styling                                      -->
    <!--                                                                                         -->

    <style name="ChallengeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/asap</item>
    </style>


    <style name="FirstLaunchButton">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginStart">45dp</item>
        <item name="android:layout_marginEnd">45dp</item>

        <item name="android:alpha">0</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/asap</item>
    </style>


    <!--                                                                                         -->
    <!--                                     Other View Styling                                  -->
    <!--                                                                                         -->

    <style name="FirstLaunchMessageBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">25dp</item>

        <item name="android:alpha">0</item>
        <item name="background">@color/light_gray</item>
        <item name="contentPadding">20dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">3dp</item>
    </style>


    <style name="PagerDot">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>

        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <style name="AsapTextAppearance">
        <item name="android:fontFamily">@font/asap</item>
    </style>

</resources>
