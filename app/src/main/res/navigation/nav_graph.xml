<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/challenge_fragment">

    <fragment
        android:id="@+id/challenge_fragment"
        android:name="com.okomilabs.dailychallenges.fragments.ChallengeFragment"
        android:label="fragment_challenge">
        <action
            android:id="@+id/challenge_to_read_more"
            app:destination="@id/read_more_fragment" />
        <action
            android:id="@+id/challenge_to_streak"
            app:destination="@id/streak_fragment" />

    </fragment>

    <fragment
        android:id="@+id/read_more_fragment"
        android:name="com.okomilabs.dailychallenges.fragments.ReadMoreFragment">
        <action
            android:id="@+id/read_more_to_challenge"
            app:destination="@id/challenge_fragment" />
        <argument
            android:name="challenge"
            app:argType="string[]"
            app:nullable="true"
            android:defaultValue="@null" />

    </fragment>

    <fragment
        android:id="@+id/streak_fragment"
        android:name="com.okomilabs.dailychallenges.fragments.StreakFragment"
        android:label="fragment_streak">

    </fragment>

</navigation>